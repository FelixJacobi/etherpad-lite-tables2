#!/bin/bash
# perm script for etherpad-lite-tables2
#
# see: dh_installdeb(1)

set -e

case "$1" in
    purge|remove)
        if [ -d "/usr/share/etherpad-lite/node_modules" ]
        then
        	# unregister module via npm
          	$(cd /usr/share/etherpad-lite/node_modules && /usr/share/etherpad-lite/src/node_modules/.bin/npm uninstall ep_tables)
        fi
    ;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)

    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

